{
  "version": 2,
  "builds": [
    {
      "src": "api/verify.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/verify",
      "dest": "api/verify.py"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "functions": {
    "api/verify.py": {
      "memory": 3008,
      "maxDuration": 60
    }
  }
}
